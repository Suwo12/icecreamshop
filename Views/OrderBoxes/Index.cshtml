@model IEnumerable<icecreamshop.Models.OrderBox>

@{
    ViewData["Title"] = "Ordrar";
}

<h1>Ordrar översikt</h1>

<p>
    <a asp-action="Create">Lägg order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderSum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flavour)
            </th>
            <th> @Html.DisplayNameFor(model => model.User)</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flavour.FlavourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderBoxId">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.OrderBoxId">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderBoxId">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
