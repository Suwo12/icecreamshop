@model icecreamshop.Models.Flavour

@{
    ViewData["Title"] = "Ändra smak";
}

<h1>Ändra smak</h1>

<h4>Smaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input style="display:none;" asp-for="FlavourId" />
            <div class="form-group">
                <label asp-for="FlavourName" class="control-label"></label>
                <input asp-for="FlavourName" class="form-control" />
                <span asp-validation-for="FlavourName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlavourPrice" class="control-label"></label>
                <input asp-for="FlavourPrice" class="form-control" />
                <span asp-validation-for="FlavourPrice" class="text-danger"></span>
            </div>
            <div style="display:none;" class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <input asp-for="PhotoPath" class="form-control" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlavourDescription" class="control-label"></label>
                <input asp-for="FlavourDescription" class="form-control" />
                <span asp-validation-for="FlavourDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till smaker</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
